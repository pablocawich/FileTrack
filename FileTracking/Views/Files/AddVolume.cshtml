@using System.Web.UI.WebControls
@using FileTracking.Models
@using FileTracking.ViewModels
@model FileTracking.ViewModels.FileVolumeViewModel
@{
    ViewBag.Title = "AddVolume";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h2>AddVolume</h2>
    </div>
    <h3>You are about to create a volume for @Model.File.FileNumber which belongs to @Model.File.FirstName</h3>
</div>

<div class="row">
    @using (Html.BeginForm("SaveVolume", "Files", FormMethod.Post, new { @id = "VolFormId" }))
    {
        
        @Html.ValidationSummary();
    <div class="col-md-4">
        <div class="form-group">
            @Html.LabelFor(v => v.FileVolumes.Comment, new { @class = "control-label" })
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>@Html.TextAreaFor(f => f.FileVolumes.Comment, new { @class = "form-control", @placeholder = "Something about volume" })

            </div>
            @Html.ValidationMessageFor(f => f.FileVolumes.Comment)
        </div>
        @{

        }
        @Html.HiddenFor(v => v.FileVolumes.Id)
        @Html.HiddenFor(v => v.FileVolumes.FileId)
        @Html.HiddenFor(v => v.FileVolumes.Volume)
        @Html.HiddenFor(v => v.FileVolumes.FileNumber)
        @Html.HiddenFor(v => v.FileVolumes.StatesId)
        @Html.HiddenFor(v => v.FileVolumes.BranchesId)
        @Html.HiddenFor(v => v.FileVolumes.CurrentLocation)

        @Html.HiddenFor(v => v.File.Id)
        @Html.HiddenFor(v => v.File.FileNumber)
        @Html.HiddenFor(v => v.File.FirstName)
        @Html.HiddenFor(v => v.File.LastName)
        @Html.HiddenFor(v => v.File.MiddleName)
        @Html.HiddenFor(v => v.File.Street)
        @Html.HiddenFor(v => v.File.CityOrTown)



        <button class="btn btn-primary btn-sm">Save File</button>
        <a href="@Url.Action("Index", "Files")" class="btn btn-danger">Cancel</a>

    </div>

    }
</div>