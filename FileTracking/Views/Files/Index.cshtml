@model IEnumerable<FileTracking.Models.File>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Files</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <!--Content goes here b -->
    <div class="jumbotron">
        
        <p>Database not created. The above is hard coded</p>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th> File Number</th>
            <th> First name</th>
            <th>Last Name</th>
            <th>City/Town/Village</th>
            <th>District</th>
            <th>Date Added</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.Id</td>
                    <td>@file.FirstName</td>
                    <td>@file.LastName</td>
                    <td>@file.CityOrTown</td>
                    <td>@file.Districts.District</td>
                    <td>@file.DateCreated</td>
               </tr>
            }
            
        </tbody>
    </table>
</div>
