@model IEnumerable<FileTracking.Models.File>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Files</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <!--Content goes here b -->
    <div class="jumbotron">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th> File Number</th>
                <th>File Id</th>
                <th> First name</th>
                <th>Last Name</th>
                <th>City/Town/Village</th>
                <th>District</th>
                <th>Date Added</th>
                <th>Volumes</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.FileNumber</td>
                    <td>@file.Id</td>
                    <td>@file.FirstName</td>
                    <td>@file.LastName</td>
                    <td>@file.CityOrTown</td>
                    <td>@file.Districts.District</td>
                    <td>@file.DateCreated</td>
                    <td>@file.Volume</td>
                    <td>@Html.ActionLink("Edit","Update", "Files",new {id = file.Id},null)</td>
                </tr>
            }
            
            </tbody>
        </table>
        </div>
</div>
