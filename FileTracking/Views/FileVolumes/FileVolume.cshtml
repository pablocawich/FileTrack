@model FileTracking.ViewModels.VolumesViewModel
@{
    ViewBag.Title = "FileVolume";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2>File Volume</h2>
        <h3>Please select a volume for file @Model.File.FileNumber which belongs to @Model.File.FirstName @Model.File.LastName</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>File Number</th>
            <th>Name</th>
            <th>Volume</th>
            <th>Comment</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var fileVol in Model.FileVolumes)
            {
                <tr>
                    <td>@Model.File.FileNumber</td>
                    <td>@Model.File.FirstName @Model.File.MiddleName @Model.File.LastName</td>
                    <td>@fileVol.Volume</td>
                    <td>@fileVol.Comment</td>
                    <td>@fileVol.States.State</td>
                    <td>Make request</td>

                </tr>
            }
        </tbody>
    </table>
</div>