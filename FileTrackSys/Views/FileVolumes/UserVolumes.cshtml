@model IEnumerable<FileTracking.Models.Request>
@{
    ViewBag.Title = "UserVolumes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 ">
        <h2 class="page-header"><strong>My Files</strong></h2>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">   
    <div>
        <p>
            <i>
                File registered here are, as of this moment, in your possession and must be returned to registry when you're
                finished with it.
            </i>
        </p>
    </div>
    
    <table id="myFiles" class="table table-hover">
        <thead>
            <tr>
                <th>File Number</th>
                <th>Volume</th>
                <th>Checked Out By</th>
                <th>Checked Out Date</th>
                <th>Branch</th>
                <th>Return</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td><span data-return-id="@req.FileVolumes.FileId" class="glyphicon glyphicon-file btn btn-success btn-block btn-xs returnModal"> @req.FileVolumes.FileNumber</span></td>
                <td>@req.FileVolumes.Volume</td>
                <td>@req.AcceptedBy.Name</td>
                <td>@req.AcceptedDate</td>
                <td>@req.RequesterBranch.Branch</td>
                <td><button class="btn btn-circle btn-block js-return" data-return-id="@req.Id"><i class="fa fa-share-square-o"></i></button></td>
            </tr>
        }      
        </tbody>
    </table>
    <div class="modal fade" id="userReturnModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="true">
        <div class="modal-dialog">
            <div class="modal-content" id="returnModelContent">
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function() {

            $("#myFiles").on('click',
                '.js-return',
                function() {
                    var $btn = $(this);
                    var requestId = $btn.attr("data-return-id");
                    bootbox.confirm(`You are returning file to registry. Continue?`,
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: siteURL + '/FileVolumes/ReturnVolume/' + requestId,
                                    success: function(response) {
                                        if (response.success == false) {
                                            bootbox.confirm({
                                                message: "you have user transfer requests for this file. Are you sure you want to return file to registry? ",
                                                buttons: {
                                                    confirm: {
                                                        label: 'Yes, return to registry',
                                                        className: 'btn-success'
                                                    },
                                                    cancel: {
                                                        label: 'No, Take me to transfers',
                                                        className: 'btn-warning'
                                                    }
                                                },
                                                callback: function(res) {
                                                    if (res) {
                                                        $.ajax({
                                                            url: siteURL +
                                                                '/FileVolumes/VerifiedReturnOfVolume/' +
                                                                requestId,
                                                            success: function(response) {
                                                                toastr.success("Return Request Sent to registry",
                                                                    "Return",
                                                                    { positionClass: "toast-bottom-right" });

                                                                $($btn).closest("tr").remove();
                                                            },
                                                            error: function(jqXhr, textStatus, errorThrown) {
                                                                alert(errorThrown);
                                                            }
                                                        });
                                                    } else {
                                                        window.location.href = siteURL + "/Requests/UserPendingTransfer";
                                                    }

                                                }
                                            });
                                        } else {
                                            toastr.success("Return Request Sent to registry",
                                                "Return",
                                                { positionClass: "toast-bottom-right" });

                                            $($btn).closest("tr").remove();
                                        }

                                    },
                                    statusCode: {
                                        404: function(content) { alert('cannot find resource'); },
                                        500: function(content) { alert('internal server error'); }
                                    }
                                });
                            }
                        });
                });

            $("#myFiles").on("click",
                ".returnModal",
                function() {
                    var id = $(this).attr("data-return-id");
                    var url = siteURL + "/Files/FileDetailsForConfirm/" + id;
                    // alert(url);

                    $('#returnModelContent').load(url);
                    $('#userReturnModal').modal('show');
                });
        });
    </script>
}