@model IEnumerable<FileTracking.Models.Request>
@{
    ViewBag.Title = "ConfirmCheckout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
<div class="col-lg-12">
    <h2 class="page-header">Approve File</h2>
</div>
<!-- /.col-lg-12 -->
</div>

<div class="row">
    <p>File has been accepted by registry and requires you to confirm physical retrieval to end the checkout process.
        Kindly approve from the table below</p>
 
    
        <table id="confirmTable" class="table table-hover">
            <thead>
            <tr>
                <th>File Number</th>
                <th>Volume</th>
                <th>Confirmation Status</th>
                <th>Accepted By</th>
                <th>Accepted Date</th>
                <th><span class="glyphicon glyphicon-hand-down" style="color: aliceblue">Action</span></th>
            </tr>
            </thead>
            <tbody>

            @foreach (var req in Model)
            {
                <tr>
                    <td><span data-confirm-id="@req.FileVolumes.FileId" class="glyphicon glyphicon-file btn btn-success btn-sm confirmModal"> @req.FileVolumes.FileNumber</span></td>
                    <td>@req.FileVolumes.Volume</td>
                    <td>@req.IsConfirmed</td>
                    <td><span class="glyphicon glyphicon-user"> @req.AcceptedBy</span></td>
                    <td><span class="glyphicon glyphicon-time"> @req.AcceptedDate</span></td>
                    <td><button approve-data-id="@req.Id" class="btn js-approve">Approve checkout</button></td>
                </tr>
            }
            </tbody>
        </table>
        <div class="modal fade" id="confirmCheckoutModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="true">
            <div class="modal-dialog">
                <div class="modal-content" id="confirmModelContent">
                </div>
            </div>
        </div>
    
    
</div>
@section scripts{
    <script>
        $(document).ready(function () {
       
           $("#confirmTable").on('click',
                '.js-approve',
                function () {
                    var $btn = $(this);
                    var requestId = $btn.attr("approve-data-id");
                    bootbox.confirm("You are approving volume. Do you wish to continue?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: '/Requests/AcceptCheckout/' + requestId,
                                    success: function() {
                                        toastr.success("File volume checked out", "Approval", { positionClass: "toast-bottom-right" });

                                        $($btn).closest("tr").remove();
                                    },
                                    statusCode: {
                                        404: function(content) { alert('cannot find resource'); },
                                        500: function(content) { alert('internal server error'); }
                                    }
                                });
                            }
                        });
                });
           $("#confirmTable").on("click", ".confirmModal",
               function() {
                   var id = $(this).attr("data-confirm-id");
                   var url = "/Files/FileDetailsForConfirm/" + id;
                   // alert(url);

                   $('#confirmModelContent').load(url);
                   $('#confirmCheckoutModal').modal('show');
               });
        });
    </script>
}