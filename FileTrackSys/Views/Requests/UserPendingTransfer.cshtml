@{
    ViewBag.Title = "UserPendingTransfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header"><strong>User Pending Transfers</strong></h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css">
<div class="row">
    <table id="userTransferPending" class="table table-striped table-bordered table-hover" style="width: 100%">
        <thead>
        <tr>
            <th>File Number</th>
            <th>Volume</th>
            <th>Requester</th>
            <th>Branch</th>
            <th>Request date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script>
        $(document).ready(function() {
            //dataTable declaration
            $("#userTransferPending").dataTable({
                "ajax": {
                    "url": siteURL + "/Requests/GetUserPendingTransfers",
                    "data": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "FileVolumes.FileNumber" },
                    { "data": "FileVolumes.Volume" },
                    { "data": "User.Name" },
                    { "data": "Branches.Branch" },
                    {
                        data: "RequestDate",
                        "render": function(data) {
                            return getDateString(data);
                        }
                    },
                    {
                        data: "Id",
                        "render": function(data, type, req) {
                            var buttonAccept =
                                `<button class='btn btn-success btn-xs js-transferBtn' data-reqId='${
                                    data}'>Transfer</button>`;
                            var buttonDeny = `<button class='btn btn-danger btn-xs js-declineTransfer'>Decline</button>`;

                            return buttonAccept + " " + buttonDeny;
                        }
                    }
                ]
            });
            //Implementing button actions
            $("#userTransferPending").on('click',
                '.js-transferBtn',
                function() {
                    var reqId = $(this).attr("data-reqId");

                    bootbox.confirm("You are accepting this transfer. Continue?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: siteURL + '/Requests/AcceptTransfer/' + reqId,
                                    success: function(response) {
                                        if(response.success)
                                            toastr.success(response.message,
                                                "Transfer", { positionClass: "toast-bottom-right" });
                                        else
                                            toastr.error(response.message,
                                                "Transfer", { positionClass: "toast-bottom-right" });
           
                                        //table.row(button.parents('tr')).remove().draw();
                                    },
                                    statusCode: {
                                        404: function(content) { alert('cannot find resource'); },
                                        500: function(content) { alert('internal server error'); }
                                    }
                                });
                            }

                        });

                });
            //decline transfer button
            $("#userTransferPending").on('click',
                '.js-declineTransfer',
                function() {
                    alert("You have chosen to decline a transfer to this user");
                });

            //Converts and returns a readable DateTime Objects as a javaScript string
            function getDateString(date) {
                var dateObj = new Date(parseInt(date.substr(6)));
                return dateObj.toDateString();
            }

        });
    </script>
}
